---
const experience = [
    {
        company: "Empresa IBARRA",
        position: "Auxiliar de Almacén",
        period: "mayo 2024 - agosto 2024",
        description: "Responsable de la carga y descarga de mercancía, así como del control y mantenimiento del inventario de la empresa.",
    }
];

const education = [
    {
        institution: "Universidad Autónoma de Tamaulipas",
        degree: "Ingeniería en Sistemas",
        period: "2023 - Presente",
        type: "education"
    },
    {
        institution: "Centro de Estudios Tecnológicos, Industriales y de Servicios N22",
        degree: "Técnico en Soporte y Mantenimiento en Equipo de Cómputo",
        period: "2020 - 2023",
        type: "education"
    }
];
---

<section id="experiencia" class="experience">
    <div class="container">
        <h2>Trayectoria Profesional</h2>
        
        <div class="timeline">
            {experience.map(item => (
                <div class="timeline-item">
                    <div class="timeline-content work">
                        <h3>{item.company}</h3>
                        <h4>{item.position}</h4>
                        <span class="period">{item.period}</span>
                        <p>{item.description}</p>
                    </div>
                </div>
            ))}

            {education.map(item => (
                <div class="timeline-item">
                    <div class="timeline-content education">
                        <h3>{item.institution}</h3>
                        <h4>{item.degree}</h4>
                        <span class="period">{item.period}</span>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .experience {
        padding: 5rem 2rem;
        background-color: #ffffff;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 4rem;
        color: #1a1a1a;
        position: relative;
    }

    h2::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: #2196F3;
    }

    .timeline {
        position: relative;
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px 0;
    }

    .timeline::after {
        content: '';
        position: absolute;
        width: 3px;
        background: linear-gradient(to bottom, #2196F3, #4CAF50);
        top: 0;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 3px;
    }

    .timeline-item {
        padding: 15px 40px;
        position: relative;
        width: 50%;
        opacity: 0;
        animation: slideIn 0.6s ease-out forwards;
    }

    .timeline-item:nth-child(odd) {
        left: 0;
        padding-right: 60px;
    }

    .timeline-item:nth-child(even) {
        left: 50%;
        padding-left: 60px;
    }

    .timeline-content {
        padding: 20px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        position: relative;
        transition: transform 0.3s ease;
    }

    .timeline-content:hover {
        transform: translateY(-5px);
    }

    .timeline-content::after {
        content: '';
        position: absolute;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        box-shadow: 0 0 0 4px rgba(33, 150, 243, 0.2);
        transition: all 0.3s ease;
    }

    .timeline-item:nth-child(odd) .timeline-content {
        margin-right: 30px;
    }

    .timeline-item:nth-child(even) .timeline-content {
        margin-left: 30px;
    }

    .timeline-item:nth-child(odd) .timeline-content::after {
        right: -72px;
        background: #2196F3;
    }

    .timeline-item:nth-child(even) .timeline-content::after {
        left: -72px;
        background: #2196F3;
    }

    .work {
        border-left: 4px solid #2196F3;
    }

    .education {
        border-left: 4px solid #4CAF50;
    }

    h3 {
        margin: 0;
        color: #2196F3;
        font-size: 1.4rem;
    }

    h4 {
        margin: 0.5rem 0;
        color: #333;
        font-size: 1.2rem;
    }

    .period {
        display: inline-block;
        color: #666;
        font-size: 0.9rem;
        margin: 0.5rem 0;
        padding: 0.3rem 0.8rem;
        background: #f5f5f5;
        border-radius: 15px;
    }

    p {
        margin: 0;
        color: #555;
        line-height: 1.6;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Estilos para móvil con diseño más compacto y elegante */
    @media (max-width: 768px) {
        .timeline {
            padding: 0;
            margin: 20px 0;
        }

        .timeline::after {
            left: 20px;
            width: 2px;
        }

        .timeline-item {
            width: 100%;
            padding: 15px 15px 15px 50px;
            margin-bottom: 20px;
        }

        .timeline-item:nth-child(odd),
        .timeline-item:nth-child(even) {
            left: 0;
            padding-right: 15px;
            padding-left: 50px;
        }

        .timeline-content {
            margin: 0 !important;
            padding: 15px;
        }

        .timeline-content::after {
            width: 16px;
            height: 16px;
            left: -43px !important;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.2);
        }

        .timeline-item:nth-child(odd) .timeline-content,
        .timeline-item:nth-child(even) .timeline-content {
            margin: 0;
        }

        h3 {
            font-size: 1.2rem;
        }

        h4 {
            font-size: 1.1rem;
        }

        .period {
            font-size: 0.85rem;
        }
    }

    /* Ajustes para pantallas muy pequeñas */
    @media (max-width: 360px) {
        .timeline-item {
            padding-left: 45px;
            padding-right: 10px;
        }

        .timeline-content {
            padding: 12px;
        }

        .timeline::after {
            left: 15px;
        }

        .timeline-content::after {
            left: -38px !important;
        }

        h3 {
            font-size: 1.1rem;
        }

        h4 {
            font-size: 1rem;
        }
    }
</style>
